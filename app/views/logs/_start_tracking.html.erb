<% content_for :head do %>
  <%= javascript_include_tag "log_tracking"%>
<% end %>
<div class="log_form blue">
	<%= form_for(@log_new, :url => start_tracking_path, :html => {:class => "start_tracking_form", :id => "start_tracking_form"} )  do |n| %>
		<div class="tracking_container">
			   <%= n.text_field :event, :class => "tracking_log_event", :AUTOCOMPLETE => "OFF"  %> 
		<div class="clock_start">
			<div class="display">
				<span class="hr">00</span>:<span class="min">00</span>:<span class="sec">00</span>
			</div>
		</div>	    
		<div class="tracking_button">
			<%= n.submit "", :class => "start"%>
		</div>
  		</div>
		<%= render :partial => "tracking_partial", :locals => {:log => @log_new, :n => n}%>
	<% end %>		  
    <div class="open_tracking_select_container">
	 	<a class="open_tracking_select" title="Details" data-id="<%= @log_new.id %>"></a>
	</div>
</div>
			
	