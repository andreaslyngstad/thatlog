$("#main_container").replaceWith("<%= escape_javascript(render("statistics")) %>");
$(".small_selector").selectmenu({width:200});
$("#user_id").change( function() { 
   var user_id = this.value
   if (!user_id)
    {
       $(".home_todo").each(function (i, dom) {
         $(dom).show();
        });
        $(".project").each(function(i, proj){
    var todos_count = $(proj).next().children('li').size()
    $(proj).children("#todos_count").text("(" + todos_count + ")")
      });
    }else{
       
       $(".home_todo").each(function (i, dom) {
        if (($(dom).attr("data-user")) != user_id )
        {
          $(dom).hide();
         
        } 
        if (($(dom).attr("data-user")) == user_id )
        {
          $(dom).show();
         
        } 
        });
         
    $(".project").each(function(i, proj){
    var todos_count = $(proj).next().children('li[data-user="' + user_id + '"]').size()
    $(proj).children("#todos_count").text("(" + todos_count + ")")
      });
      } 
    });
$(".arrow_close").click(function(){
    $(this).toggleClass("arrow_open arrow_close"); 
    $(this).parent().next("#home_todos").slideToggle();
   });     

$(".indicator").hide();
