<html xmlns="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<head>
  <title>Loggyit</title>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="google-site-verification" content="ynxbxSS6ZtwG1WFHyqmWZ5ELrgNRADdhdEFebN11h5k" />

  <%= stylesheet_link_tag   "jquery-ui-1.8.7.custom", "navi_styles", 'application' %>

   <%= csrf_meta_tag %>
   <link rel="shortcut icon" href="/favicon.png" />
   

<%= javascript_include_tag "jquery-1.4.4.min",  "raphael-min", "elycharts.min", "jquery.jclock", "jquery.ba-bbq.min", "jquery-ui-1.8.7.custom.min",  "jquery.ui.selectmenu", "jquery.quicksearch.js", "jquery.validate", "navigation", "rails", "application"%>

</head>
<body>
  
 <div id="main">
<%= render "layouts/header" %>

<div id="wrapper">
<div id="all_container">
	<div class="messages">
		<span class="spinning" style="display:none;"></span>
		<div id="flash_messages">	
			<span class="flash_notice"><%= flash[:notice] %></span>
			<span class="flash_error"><%= flash[:error] %></span>		
		</div>
		 <div id="user_nav_header">
	<%= link_to "Sign out", sign_out_path %>
	 	<span class="display_help" title="View page help">?</span>		
	</div>
	</div>
	<%= yield(:help)%>

	
<div id="navigation">
	<ul>
	 <% if current_user %>
    <%= tabs_tag(:builder => ApplicationHelper::MenuTabBuilder) do |tab| %>
   
     <%= tab.statistics  "Statistics", statistics_path(:subdomain => current_firm.name), :pos => "0"%>
  <%= tab.logs  "Logs", logs_path(:subdomain => current_user.firm.name), :pos => "75"%>
  <%= tab.projects  "Projects", projects_path(:subdomain => current_user.firm.name), :pos => "150"%>
  <%= tab.customers "Customers", customers_path, :pos => "225" %>
  <%= tab.users   "Users", users_path(:subdomain => current_user.firm.name), :pos => "300" %>
<% end %>
<% end %>
    </ul>
<span  id="pointer"><span id="pointer-text">Statistics</span>
<span class="indicator" style="display:none;"></span>
</span>

	</div>
	

<div id="main_container">
<%= yield %>
</div>
</div>
</div>
</div>
<div id="footer">
	
</div>


</body>
</html>
