
<div class="signup signup_firm">
<%= form_for @user_session do |f|  %>
  <div class="signup-form-field"><%= f.label :email %>
 <%= f.text_field :email %></div>
  <div class="signup-form-field"><%= f.label :password %>
 <%= f.password_field :password %></div>

     <div class="signup-form-field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
 
<%= f.submit "Login", :class => "submit"%>
<%end%>
</div>

